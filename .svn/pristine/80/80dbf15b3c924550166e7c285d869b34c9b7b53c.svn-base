*{
    margin: 0;
    padding: 0;
}
li{
    list-style: none;
}

.button{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120px;
    height: 32px;
   margin: 40px 0 0 100px;
    color: white;
    border: 0px;
    border-radius: 4px;
    background-color: blueviolet;
    cursor: pointer;
    box-shadow: 1px 1px 2px 1px rgba(50,50,50,.3);
}
.container{
    width: 200px;
    height: 400px;
    border: 1px solid red;
    margin-top: 100px;
    margin-left: 200px;
}
#div{
    padding: 10px;
    border: 1px solid red;
}