<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>显示与隐藏</title>
    <script src="http://www.anydo.wang/resource/js/jquery-3.1.1.js"></script>
    <style>
        .div1{
            width: 800px;
            height: 200px;
            background-color: #2a6496;
        }
        .btn{
            position: absolute;
            top: 250px;
        }
    </style>
</head>
<body>
<div class="div1"></div>
<div class="btn">
    <button id="btn1">点击隐藏</button>
    <button id="btn2">点击显示</button>
    <button id="btn3">切换显示</button>
    <button id="btn4">切换true</button>
    <button id="btn5">切换false</button>
</div>

<script>
    $(function(){
        $('#btn1').on('click',function(){
            $('.div1').hide(3000,"linear",function(){
                alert('')
            });
        });

//        hide(),显示元素
        $('#btn2').on('click',function(){
            $('.div1').show({
                duration:2000,
                easing:"linear",
                complete:function(){
                    alert('')
                }
            });
        });


//        1、toggle(),切换，通过传入duration和complete
        $('#btn3').on('click',function(){
            $('.div1').toggle({
                duration:3000,
                complete:function(){
                    alert('完成！');
                }
            });
        });

//        2、toggle(),true
        $('#btn4').on('click',function(){
            $('.div1').toggle(true);
        });


//        3、toggle(),false
        $('#btn5').on('click',function(){
            $('.div1').toggle(false);
        });
    });

</script>
</body>
</html>