<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>v-if</title>
    <script src="../js/VUE.js"></script>
</head>
<body>
<div id="app">
    <li v-if="show">{{content}}</li>
    <button v-on:click="handleClick">toggle</button>
</div>
</body>
<script>
    var app=new Vue({
        el:"#app",
        data:{
            content:"hello kitty",
            show:true
        },
        methods:{
            handleClick:function () {
                this.show=!this.show;
            }
        }
    })
</script>
</html>