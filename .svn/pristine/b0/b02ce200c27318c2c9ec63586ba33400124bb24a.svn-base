<script>
    var clientwith=document.getElementById('test1').clientWidth;
    var clientheight=document.getElementById('test1').clientHeight;
    var offsetwith=document.getElementById('test1').offsetWidth;
    var offsetheight=document.getElementById('test1').offsetHeight;
    var bodyWidth=document.documentElement.clientWidth;
    var bodyHeight=document.documentElement.clientHeight;
    var bodyWidth1=document.documentElement.offsetWidth;
    var bodyHeight1=document.documentElement.offsetHeight;
    var clientleft=document.getElementById('test2').offsetLeft;
    var clienttop=document.getElementById('test2').offsetTop;
    console.log("client-test1:"+clientwith+":"+clientheight);
    console.log("offset -test1:"+offsetwith+":"+offsetheight);
    console.log("client -body:"+bodyWidth+":"+bodyHeight);
    console.log("offset -body:"+bodyWidth1+":"+bodyHeight1);
    console.log("offset左边和右边:"+clientleft+":"+clienttop);

    $(function(){
