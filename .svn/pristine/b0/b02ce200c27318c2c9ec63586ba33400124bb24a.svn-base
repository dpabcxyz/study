            var Scrollwidth=document.documentElement.scrollWidth;
            var Scrollheight=document.documentElement.scrollHeight;
            Scrollwidth=Math.max(document.documentElement.scrollWidth,document.documentElement.clientWidth);
            Scrollheight=Math.max(document.documentElement.scrollHeight,document.documentElement.clientHeight)
            console.log("网页滚动的宽度："+Scrollwidth+"网页滚动的宽度："+Scrollheight);
        })
    });
