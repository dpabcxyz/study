<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>监听事件</title>
		<script src="http://www.anydo.wang/resource/js/jquery-3.1.1.js"></script>
		<style>
			#div1{
				width: 100%;
				height: 300px;
				margin: 0 auto;
				border: 1px solid red;
				overflow: auto;
			}
		</style>
	</head>
	<body>
	<div id="div1" class="div1">
		<p style="height: 500px">
			hello world!
		</p>
	</div>
	<div style="width: 100%;height: 2000px">
		<img src="123.png" alt="" id="img">
		<br>
		<form action="" id="sub">
		<input type="text" placeholder="hello world!" id="txt" autofocus>
		<input type="submit" >
		</form>
	</div>
	<div id="click" style="background-color: red;width: 200px;height: 200px">
		<div style="width: 50px;height: 50px;background-color:green"></div>
	</div>
	<script>
//		1、resize事件
		$(function(){
			window.addEventListener('resize',function(){
				console.log('您改变了浏览器窗口大小');
			})
		});

//		2、scroll事件
var obj=document.getElementById('div1');
		$(function(){
			obj.addEventListener('scroll',function(){
				console.log('您滑动了div的滚动条');
			})
		});

//		3、scroll事件
		$(function(){
			window.addEventListener('scroll',function(){
				console.log('您滑动了body滚动条');
			})
		});

//		4、error事件
		$(function(){
			document.getElementById('img').addEventListener('error',function(){
				console.log('出错了！');
			})
		});

//		5、load事件
		$(function(){
			window.addEventListener('load',function(){
				console.log('资源加载完成了！');
			})
		});

//		6、blur事件
		$(function(){
			document.getElementById('txt').addEventListener('blur',function(){
				console.log('失去焦点！');
			})
		});

//		7、focus事件
		$(function(){
			document.getElementById('txt').addEventListener('focus',function(){
				console.log('获得焦点！');
			})
		});

//		8、select事件
		$(function(){
			document.getElementById('txt').addEventListener('select',function(){
				console.log('选中了！');
			})
		});

//		9、change事件
$(function(){
	document.getElementById('txt').addEventListener('change',function(){
		console.log('改变了！');
	})
});

//		10、submit事件
$(function(){
	document.getElementById('sub').addEventListener('submit',function(){
		console.log('提交成功！');
	})
});

//		11、keydown事件
$(function(){
	window.addEventListener('keydown',function(){
		console.log('按了键盘');
	})
});

//		12、keyup事件
$(function(){
	window.addEventListener('keyup',function(){
		console.log('松开键盘');
	})
});

//		13、keypress事件
$(function(){
	window.addEventListener('keypress',function(){
		console.log('敲击键盘');
	})
});

//		14、click事件
//$(function(){
//	document.getElementById('click').addEventListener('click',function(){
//		console.log('单击了！');
//	})
//});

//		15、dblclick事件
$(function(){
	document.getElementById('click').addEventListener('dblclick',function(){
		console.log('双击了！');
	})
});

//		16、mousedown事件
$(function(){
	document.getElementById('click').addEventListener('mousedown',function(){
		console.log('按下鼠标！');
	})
});

//		17、mouseup事件
$(function(){
	document.getElementById('click').addEventListener('mouseup',function(){
		console.log('松开鼠标！');
	})
});


//		18、mouseenter事件
//$(function(){
//	document.getElementById('click').addEventListener('mouseenter',function(){
//		console.log('鼠标移入-冒泡！');
//	})
//});
//
////		19、mouseleave事件
//$(function(){
//	document.getElementById('click').addEventListener('mouseleave',function(){
//		console.log('鼠标移开-冒泡！');
//	})
//});

//		20、mouseout事件
$(function(){
	document.getElementById('click').addEventListener('mouseout',function(){
		console.log('鼠标移开-不冒泡！');
	})
});

//		21、mouseover事件
$(function(){
	document.getElementById('click').addEventListener('mouseover',function(){
		console.log('鼠标移入-不冒泡！');
	})
});

//		22、mousemove事件
$(function(){
	document.getElementById('click').addEventListener('mouseover',function(){
		console.log('鼠标移动！');
	})
});
	</script>
	</body>
</html>
