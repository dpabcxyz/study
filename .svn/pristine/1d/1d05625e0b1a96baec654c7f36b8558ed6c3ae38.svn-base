*{
    padding: 0;
    margin: 0;
    font-family: "微软雅黑",Microsoft Yahei,Arial, verdana;
}
body{
    width: 100%;
    height: 100vh;
    min-height: 600px;
    background:url('../images/index_bg.png') center  no-repeat;
    background-size: 100% 100%;
}
@font-face
{
font-family: myFirstFont;
src:    url('../fonts/LiquidCrystal-Bold.eot'),
        url('../fonts/LiquidCrystal-Bold.otf'),
        url('../fonts/LiquidCrystal-Bold.svg'),
        url('../fonts/LiquidCrystal-Bold.ttf'),
        url('../fonts/LiquidCrystal-Bold.woff');
}
li{list-style: none;}
.box{
    box-sizing: border-box;
    height: 100%;
}
.box .content{
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}
.box .content .item{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100%;}
.box .content .item .inner{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    padding-top: 36px;
}
.box .content .item .inner .title{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 36px;
    text-align: center;
    line-height: 36px;
    font-size: 18px;
    color: #fff;
    background: url("../images/box_title.png") center no-repeat;
    background-size: 100% 100%;
}
.box .content .item .inner .echarts{
    width: 100%;
    height: 100%;
}
/*left*/
.box-left{
    float: left;
    width: 400px;
    padding: 8px 0 8px 8px;
}
.box-left .content .item1{
    height: 20%;
}
.box-left .content .item1 .inner{
    background: url("../images/border_bg01.png") center no-repeat;
    background-size: 100% 100%;
    overflow: hidden;
}
.box-left .content .item1 .inner .symbol{
    position: absolute;
    top: 16px;
    left: 0;
    width: 100%;
    height: 26px;
    text-align: center;
    color: #fff;
    line-height: 26px;
    font-size: 14px;
    font-family: myFirstFont;
    background: url('../images/title_bg01.png') center no-repeat;
}
.box-left .content .item1 .inner .amount{
    box-sizing: border-box;
    position: absolute;
    top: 50%;
    left: 50%;
    -ms-transform: translate(-50%,-50%);
    transform: translate(-50%,-50%);
    width: 200px;
    padding-top: 40px;
    color: #00ffff;
    font-size: 34px;
    font-family: myFirstFont;
    text-align: center;

}
.box-left .content .item2{
    height: 40%;
    padding-top: 8px;
}
.box-left .content .item2 .linked{
    position: absolute;
    top: 15%;
    left: 0;
    width: 100%;
    text-align: center
}
.box-left .content .item2 .linked .value{
    margin: 5% 0 8px 0;
    font-size: 24px;
    color: #00ffff;
    font-family: myFirstFont;
}
.box-left .content .item2 .linked .name{
    font-size: 14px;
    color: rgba(255,255,255,.8);
}
.box-left .content .item3{
    height: 40%;
    padding-top: 8px;
}

/*right*/
.box-right{
    float: right;
    width: 400px;
    padding: 8px 8px 8px 0;
}
.box-right .content .item4{
    height: 20%;
}
.box-right .content .item4 .flow{
    width: 100%;
    padding-top: 36px;
    position: absolute;
    top: 50%;
    -ms-transform: translateY(-50%);
    transform: translateY(-50%);
}
.box-right .content .item4 .flow .month,
.box-right .content .item4 .flow .today{
    float: left;
    width: 50%;
    text-align: center;
}
.box-right .content .item4 .flow .name{
    font-size: 14px;
    color: rgba(255,255,255,.8)
}
.box-right .content .item4 .flow .value{
    margin-bottom: 8px;
    font-size: 24px;
    color:#00ffff;
     font-family: myFirstFont;
}
.box-right .content .item5{
    height: 43%;
}
.box-right .content .item6{
    height: 37%;
}
/*center*/
.box-center{
    box-sizing: border-box;
    height: 100%;
    padding: 12px;
    overflow: hidden;
    background: url("../images/line_img.png") top left repeat-y,url("../images/line_img.png") top right repeat-y;
}
.box-center .content{
    padding: 8px 8px 0 8px;
    overflow: hidden;
}
.box-center .content .item{
    padding-top: 66px;
}
.box-center .content .item .sysName{
    position: absolute;
    top: 0;
    left: 0;
    box-sizing: border-box;
    width: 100%;
    height: 54px;
    line-height: 40px;
    font-size: 40px;
    color: #cdddf7;
    text-align: center;
    background: url("../images/title_border.png") center no-repeat;
    background-size: 100% 100%;
}
.box-center .content .item .main{
    box-sizing: border-box;
    position: relative;
    width: 100%;
    height: 100%;
    padding-top: 120px;
}
.box-center .content .item .main .block{
    position: absolute;
    top: 10px;
    left: 0;
    width: 100%;

}
.box-center .content .item .main .block .item{
    box-sizing: border-box;
    float: left;
    width: 33.33%;
    padding: 0 14px;
}
.box-center .content .item .main .block .item>ul{
    box-sizing: border-box;
    width: 100%;
    padding: 12px 0;
    border: 1px solid #0e94ea;
    text-align: center;
     border-radius: 4px;
}
.box-center .content .item .main .block .item>ul .value{
    height: 36px;
    color: #00ffff;
    font-size: 24px;
    font-weight: bold;
    line-height: 36px;
     font-family: myFirstFont;
}
.box-center .content .item .main .block .item>ul .name{
    height: 22px;
    font-size: 14px;
    color:rgba(255, 255, 255, 0.7);
    line-height: 22px;
}
.box-center .content .item .main .echarts{
    width: 100%;
    height: 100%;
}