<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <title>接收父组件的值</title>
    <script src="../js/VUE.js"></script>
    <style>
        p{color: red;}
    </style>
</head>
<body>
<div id="box">
    <parent></parent>
</div>

<template id="p">
    <div>
        <h1>我是父组件！</h1>
        <child ref="msg1"></child>
    </div>
</template>

<template id="c">
    <h3>{{message}}</h3>
</template>
</body>
<script type="text/javascript">
    var vm=new Vue({
        el:'#box',
        components:{
            'parent':{
                template:'#p',
                components:{
                    'child':{
                        template:'#c',
                        data(){
                            return{
                                message:''
                            }
                        },
                        methods:{
                            getMessage(m){
                                this.message=m;
                            }
                        }
                    }
                },
                mounted: function () {
                    console.log( this.$refs.msg);
                    this.$refs.msg1.getMessage('我是子组件一！')
                }
            }
        }
    })
</script>
</html>