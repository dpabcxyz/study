<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>append()方法</title>
    <script src="http://www.anydo.wang/resource/js/jquery-3.1.1.js"></script>
    <style>
        .test1{
            width: 80%;
            margin: 100px auto 0;
            border: 1px solid red;
            text-align: center;
        }
        .test2{
            width: 80%;
            margin: 30px auto 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>
<div class="test1" id="txt1">
    <p class="txt1" >hello,world!</p>
    <p class="txt2" >hello,kitty!</p>
</div>
<p class="txt3">外面的p</p>

<div class="test2" id="txt4">
    <button id="btn1">插入普通字符串</button>
    <button id="btn2">插入标签</button>
    <button id="btn3">插入创建的对象</button>
    <button id="btn4">插入已有对象</button>
    <button id="btn5">传入函数</button>
</div>
<script>
    $('#btn1').on('click',function(){
        $('.test1').append('哈哈哈');
    });

    $('#btn2').on('click',function(){
        $('.test1').append('<h3>标签</h3>');
    });

    $('#btn3').on('click',function(){
        var $obj=$('<p>12345</p>');
        $('.test1').append($obj);
    });

    $('#btn4').on('click',function(){
        $('.test1').append($('.txt3'));
    });

    $('#btn5').on('click',function(){
    $('div p').append(function(index,value){
//        alert(this.className)
        if (this.className=='txt1'){
            return   '存在';
        }
        else{
            return '不存在！'
        }
    })
})
</script>
</body>
</html>