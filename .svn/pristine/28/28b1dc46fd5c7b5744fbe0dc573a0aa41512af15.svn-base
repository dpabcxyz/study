<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>自定义指令参数</title>
    <script src="../js/VUE.js"></script>
</head>
<body>
    <div id="app">
        <h2 v-hi:test='userName'>{{msg}}</h2>
        <button @click="fn">点击修改值</button>
    </div>
    <script>
       
        Vue.directive('hi',{
            bind(el,binding){
               el.style.color='red'  //获取绑定的dom
               console.log(binding);
               console.log(binding.value); 
               console.log(binding.arg); 
            }
        })
        var vm=new Vue({
            el:'#app',
            data:{
                msg:'呵呵呵呵呵!',
                userName:'陈轩'
            },
            methods:{
                fn:function(){
                    this.msg="啊啊啊啊啊啊！"
                }
            }
        })
    </script>
</body>
</html>