*{
    padding: 0;
    margin: 0;
    font-family: "微软雅黑",Microsoft Yahei,Arial, verdana;
}
body{
    position: relative;
    box-sizing: border-box;
    width: 100%;
    height: 100vh;
    padding: 90px 16px 16px 16px;
    min-height: 600px;
    background:url('../images/index_bg.png') center  no-repeat;
    background-size: 100% 100%;
}
li{list-style: none;}
.head{
    position: absolute;
    top:8px;
    left: 0;
    width: 100%;
    height: 54px;
    line-height: 40px;
    text-align: center;
    color: #fff;
    font-size: 40px;
    background: url('../images/title_border_1.png') center no-repeat;
    background-size: 100%;
}
.slide{
    box-sizing: border-box;
    float: left;
    width: 240px;
    height: 100%;
}
.slide li{
    float: left;
    width: 100px;
    height: 36px;
    margin: 14px 10px;
    border-radius: 3px;
    color: #fff;
    font-size: 14px;
    text-align: center;
    line-height: 36px;
    background-color: #4788fb;
    cursor: pointer;
}
.slide li:hover{
    background-color: #3a74dc;
}
.main{
    position: relative;
    box-sizing: border-box;
    height: 100%;
    padding: 16px;
    border: 1px solid #0e94ea;
    overflow: hidden;
}
.main i{
    position: absolute;
    background-color: #4788fb;
    box-shadow: 0px 0px 10px #4788fb;
}
.main .l-t-1{
    top: -3px;
    left: 0;
    height: 5px;
    width: 26px; 
}
.main .l-t-2{
    top: -3px;
    left: -3px;
    height: 26px;
    width: 5px; 
}
.main .r-t-1{
    top: -3px;
    right: 0;
    height: 5px;
    width: 26px; 
}
.main .r-t-2{
    top: -3px;
    right: -3px;
    height: 26px;
    width: 5px; 
}
.main .l-b-1{
    bottom: -3px;
    left: 0;
    height: 5px;
    width: 26px;
}
.main .l-b-2{
    bottom: -3px;
    left: -3px;
    height: 26px;
    width: 5px;
}
.main .r-b-1{
    bottom: -3px;
    right: 0;
    height: 5px;
    width: 26px;
}
.main .r-b-2{
    bottom: -3px;
    right: -3px;
    height: 26px;
    width: 5px;
}
.main .title{
    position: absolute;
    top: 8px;
    left: 50%;
    -ms-transform: translateX(-50%);
    transform: translateX(-50%);
    width: 200px;
    height: 32px;
    border-radius: 8px;
    color: #fff;
    line-height: 32px;
    text-align: center;
    background-color:#3a74dc;
}
.main .echarts{
    width: 100%;
    height: 100%;
}
.back{
    position: absolute;
    display: block;
    top: 40px;
    right: 16px;
    height: 36px;
    padding: 0 20px;
    border-radius: 3px;
    line-height: 36px;
    background-color: #3a74dc;
    cursor: pointer;
}
.back:hover{
    background-color: #3a74dc;
}
.back .symbol{
    float: left;
    width: 20px;
    height: 20px;
    margin-top: 8px;
    background: url('../images/back.png') center no-repeat;
    background-size: 100%;
}
.back .text{
    float: left;
    color: #fff;
    font-size: 14px;
    margin-left: 10px;
}