    <p style="width: 1200px">hello world!</p>
</div>
<div class="test3">

</div>
<div style="width: 80%;height: 2000px"></div>
<script>
    //    1、不传值，获取指定的属性值
    alert($('.test1 div').width());

    //    2、传入属性值
    $('.test1 div').width('500px');

    //    3、传入函数
    $('#btn1').click(function(){
        $('.test1 div').css('width',function(i,v){
            w=parseFloat(v);
            if (w>400){
                return '200px'
            }
        })
    });

    //    4、height同width

