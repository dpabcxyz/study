<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>replacewitch()</title>
    <script src="http://www.anydo.wang/resource/js/jquery-3.1.1.js"></script>
    <style>
        body{
            text-align: center;
        }
        li{
            list-style: none;
        }
        .test1{
            margin: 0 auto;
            width: 80%;
            border: 2px solid red;
            margin-bottom: 30px;
            padding: 10px;
        }
        .test2{
            margin: 0 auto;
            width: 80%;
            border: 2px solid blue;
            margin-bottom: 30px;
            padding: 10px;
        }
        .test3{
            margin: 0 auto;
            width: 80%;
            border: 2px solid black;
            margin-bottom: 30px;
            padding: 10px;
        }
        .test4{
            margin: 0 auto;
            width: 80%;
            border: 2px solid yellow;
            margin-bottom: 30px;
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="test1">
        <ul>
            <li>1d1</li>
            <li>2d2</li>
            <li>3</li>
            <li>4dd</li>
            <li>5d</li>
        </ul>
    </div>
    <script>
//        $('.test1 ul li').replaceWith('<p>hello</p>');
        $('.test1 ul li').replaceWith(function(m,n){
            if (m==2){
                return '<p>kitty</p>';
            }
            else{
                return '<h3>hello world</h3>';
         }
        });
//        $('<p>hello world</p>').replaceAll('.test1 ul p');

    </script>
</body>
</html>