<head>
        <meta charset="UTF-8">
        <title>自定义动画</title>
        <script src="jquery-3.1.1.min.js"></script>
        <style>
            .div1{
                width: 300px;
                height: 600px;
                border: 1px solid red;
                overflow: hidden;
            }
            .div2{
                width: 200px;
            }
            .block{
                width: 200px;
                height: 200px;
                margin: 24px 0;
                color: aliceblue;
                line-height: 200px;
                font-size: 20px;
                background-color: black
            }
        </style>
    </head>
    <body>
        <div class="div1">
            <div class="div2">
                <div class="block">1</div>
                <div class="block">2</div>
                <div class="block">3</div>
                <div class="block">4</div>
                <div class="block">5</div>
                <div class="block">6</div>
                <div class="block">7</div>
            </div>
        </div>
    </body>
    <script>
        $('.div1').animate({
            scrollTop:'1000px'
        },50000)
    </script>