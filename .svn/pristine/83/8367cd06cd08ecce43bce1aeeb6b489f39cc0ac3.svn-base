<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>清除动画队列</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.0/jquery.min.js"></script>
    <style>
        .div{
            width: 120px;
            height: 120px;
            background-color: red;
            margin-right: 36px;
            float: right;
        }
    </style>
</head>
<body>
<button id="btn">start</button>
<div class="div" id="div1"></div>
<div class="div" id="div2"></div>
<div class="div" id="div3"></div>
<div class="div" id="div4"></div>
</body>
<script>
    $('#btn').click(function () {
        $(document).dequeue('chenxuan')
    });
    $(document).queue('chenxuan',[
        function (next) {
            $('#div1').animate({
                'margin-top':'+=800'
            },2000,'linear',function () {
                next();
            })
        },
        function (next) {
            $('#div2').animate({
                'margin-top':'+=800'
            },2000,'linear',function () {
                next();
            })
        },
        function (next) {
            $('#div3').animate({
                'margin-top':'+=800'
            },2000,'linear',function () {
                $(document).clearQueue('chenxuan');  //清除动画队列，还可以移除函数
                next();
            })
        },
        function () {
            $('#div4').animate({
                'margin-top':'+=800'
            },2000,'linear',function () {
            })
        }

    ])
</script>
</html>