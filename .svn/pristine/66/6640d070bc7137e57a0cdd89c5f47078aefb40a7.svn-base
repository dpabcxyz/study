<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>state状态机</title>
    <script src="js/bower_components/react/react.js"></script>
    <script src="js/bower_components/react/react-dom.js"></script>
    <script src="js/bower_components/babel/browser.js"></script>
</head>
<body>
    <div id="app"></div>
    <script type="text/babel">
        // 1. 创建组件类
        class Liao extends React.Component{
            constructor(){
                super();

                // 2. 初始化状态
                this.state = {
                    name: '周杰伦',
                    gender: '男',
                    intro: '七里香'
                };
                // this.dealClick = this.dealClick.bind(this);
            }
            render(){
                const {name, gender, intro} = this.state;
                return (
                    <div>
                        <h3>我叫：{name}, 性别：{gender}, 代表作：{intro}</h3>
                    </div>
                )
            }
        }

        // 2. 渲染到DOM容器
        ReactDOM.render(
            <Liao/>,
            document.getElementById('app')
        );
    </script>
</body>
</html>